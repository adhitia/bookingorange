<h1>Tambah Customer Service</h1>

<%= form_with model: @user, url: create_customer_service_admin_users_path, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :name, "Nama" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="d-grid">
    <%= f.submit "Simpan Customer Service", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Kembali", customer_services_admin_users_path, class: "btn btn-secondary mt-3" %>
